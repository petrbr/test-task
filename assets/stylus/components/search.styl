.search
	background #ebebeb
	//background linear-gradient(to bottom, #ebebeb 0%,#ffffff 34%,#ffffff 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */ /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	background linear-gradient(to bottom, #ffffff 0%, #ffffff 70%, #ebebeb 100%)
	display flex
	border 1px solid #6b6b6b
	box-shadow 0 2px 10px 1px rgba(0,0,0,0.3)
	border-radius 6px
	margin-bottom 6px
	&__input
		position relative
		width (100% / 3)
		border-left 1px solid #cecece
		padding-left 40px
		&:before
			display block
			position absolute
			top 20px
			left 10px
			content ''
			width 20px
			font-size 20px
			line-height 20px
			text-align center
		&--dest-from
			fa(plane)
		&--dest-to
			fa(plane)
			&:before
				transform rotate(90deg)
		&--date-from
			fa(calendar)
		input
			width 100%
			height 60px
			font-size 18px
			box-sizing border-box
			padding 10px 10px
			border none
			outline none
			background none