.header
	position absolute
	width 100%
	height 120px
	overflow hidden
	&__h1
		position absolute
		top 90px
		left 50%
		transform translateX(-50%)
		color #fff
		text-align center
		text-shadow 1px 1px 1px rgba(2, 2, 0, 0.5)
		margin 0
		font-size 36px
		&--hidden
			animation-name takeoff
			animation-duration .8s
			animation-iteration-count 1
			animation-timing-function linear
			animation-fill-mode forwards

@keyframes takeoff {
	0% {
		opacity 1
	}
	20% {
		transform translate(100px, 0)
	}
	35% {
		transform translate(175px, -35px)  rotate(-20deg)
	}
	100% {
		transform translate(600px, -240px) rotate(-20deg)
		opacity 0
		display none
	}
}